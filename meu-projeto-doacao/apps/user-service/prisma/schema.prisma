// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DATABASE_URL")
}

// Enums
enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING_VERIFICATION
  BLOCKED
}

enum DocumentType {
  CPF
  CNPJ
  PASSPORT
  OTHER
}

enum VerificationStatus {
  PENDING
  SUBMITTED
  REVIEWING
  APPROVED
  REJECTED
  EXPIRED
}

enum RoleType {
  USER
  DONOR
  FUNDRAISER
  MODERATOR
  ADMIN
}

enum WalletProvider {
  METAMASK
  WALLET_CONNECT
  COINBASE_WALLET
  TRUST_WALLET
  PHANTOM
  OTHER
}

// TODO: talvez isso n faça tanto sentido
enum BlockchainNetwork {
  ETHEREUM_MAINNET
  ETHEREUM_SEPOLIA
  POLYGON
  BSC
  ARBITRUM
  OPTIMISM
  SOLANA
  BASE
}

enum UserReputation {
  TRUSTED // Good standing, reliable
  GOOD // Generally positive behavior
  NEUTRAL // New or average user
  WARNING // Suspect behavior, caution advised
  DANGEROUS // High risk, avoid interactions
}

